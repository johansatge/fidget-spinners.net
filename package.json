{
  "name": "fidget-spinners.net",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "babel-core": "^6.24.0",
    "babel-loader": "^6.4.1",
    "babel-preset-es2015": "^6.24.0",
    "ejs": "^2.5.6",
    "filesize": "^3.5.6",
    "html-minifier": "^3.4.2",
    "node-sass": "^4.5.1",
    "osx-notifier": "^0.2.2",
    "uglifyjs-webpack-plugin": "^0.3.1",
    "webpack": "^2.3.2"
  },
  "scripts": {
    "watch": "chokidar --ignore=src/js/main.bundle.js src/**/* -c 'npm run build'",
    "build": "rm -r dist;mkdir dist && cp -r src/images dist/images && cp -r spinners/images dist/images/spinners && node build/build.js && php build/build_versioned_assets.php;rm src/js/main.bundle.js",
    "deploy:assets": "s3cmd sync ./dist/ s3://fidget-spinners.net/ --recursive --delete-removed --exclude=.DS_Store --exclude=index.html --add-header='Cache-Control: max-age=2592000, public'",
    "deploy:index": "s3cmd sync ./dist/index.html s3://fidget-spinners.net/ --cf-invalidate --cf-invalidate-default-index --add-header='Cache-Control: max-age=600, public'",
    "deploy": "npm run build && npm run deploy:assets && npm run deploy:index"
  },
  "engines": {
    "node": ">=6"
  }
}
